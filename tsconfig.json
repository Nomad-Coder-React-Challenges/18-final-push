{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#components/*": ["src/components/*"],
      "#pages/*": ["src/pages/*"],
      "#hooks/*": ["src/hooks/*"],
      "#stores": ["src/stores"],
      "#constants": ["src/constants"],
      "#src/*": ["src/*"]
    }
  },
  "extends": "./tsconfig.paths.json",
  "exclude": ["node_modules"]
}
